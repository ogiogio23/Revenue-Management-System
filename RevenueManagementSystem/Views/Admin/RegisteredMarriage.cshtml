@model IEnumerable<RevenueManagementSystem.Models.Marriage>
@{
    ViewBag.Title = "RegisteredMarriage";
    Layout = "~/Views/Shared/_RevenueLayout.cshtml";
}

@Html.Partial("_AdminHeader")
<section class="container">
    <div class="row">
        <aside class="col-md-3">
@Html.Partial("_SidePanel")

        </aside>

        <article class="col-md-9">

            <h2>List of Registered Marriages</h2><br />
            @if (ViewBag.Message != null)
            {
                <h3 style="color: darkgreen"><i>Total Number of Marriages : @ViewBag.Message</i></h3>
            }

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Occupation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AmountPaid)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.NameOfCouple )
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Date )
                    </th>

                    <th></th>
                    <th></th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Occupation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AmountPaid)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.NameOfCouple )
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date )
                        </td>


                        <td>
                            @Html.ActionLink("View", "EditMarriage/"+item.Id, "Admin")
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteMarriage/"+item.Id, "Admin")
                        </td>

                    </tr>

                }

            </table>
        </article>
    </div>
</section>

<div id="backtotop" title="Scroll to top"></div>


