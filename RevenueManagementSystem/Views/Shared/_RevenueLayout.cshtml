@{
    Layout = null;
}




<!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" href="images/favicon.ico">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=true" />
    <title>@ViewBag.Title</title>
    <script src="~/Content/js/jquery-1.11.1.min.js" type="text/javascript"></script>
    <link href="~/Content/js/fieldModifier.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/js/BootSrap/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/js/BootSrap/font-awesome/css/font-awesome.min.css" type="text/css" rel="stylesheet" />
    <link rel="Stylesheet" href="~/Content/css/mainStyle.css" />
    <style type="text/css">
        .top-header {
            padding: 10px;
        }

        .header {
            padding: 5px 10px;
            border-bottom: 1px solid #ccc;
        }

        .navbar {
            padding-left: 10px;
            padding-right: 10px;
            border-radius: 0px;
        }

        .side-icons {
            color: #0a0;
            font-size: 16px;
        }

        #login-form h3 {
            margin-bottom: 20px;
            text-align: center;
        }

        .side-imgs {
            border: 5px solid #ddd;
            border-radius: 10px;
            margin-left: 20px;
            max-height: 350px;
        }
    </style>
</head>
<body>
    <div class="container-fluid" style="overflow:hidden;">

        <!--Header Section-->
        @Html.Partial("_Header")





        <!--Body Section-->
        @RenderBody()



        <!--Footer Section-->
        <footer id="footer">
            <div id="social">
                <div id="social-content">
                    <div id="social-icons">
                        <h3>Follow us on: </h3>
                        <a href="#" target="_blank" title="Facebook">
                            <i class="fa fa-facebook-square"></i>
                        </a>
                        <a href="#" target="_blank" title="Googlee Plus">
                            <i class="fa fa-google-plus-square"></i>
                        </a>
                        <a href="#" target="_blank" title="Twitter" style="royalblue;">
                            <i class="fa fa-twitter-square"></i>
                        </a>
                        <a href="#" target="_blank" title="Linked In">
                            <i class="fa fa-linkedin-square"></i>
                        </a>
                        <a href="#" target="_blank" title="YouTube Channel" style="red;">
                            <i class="fa fa-youtube-square"></i>
                        </a>
                    </div>
                </div>
            </div>

        </footer>
    </div>
    <script src="~/Content/js/BootSrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/js/BootSrap/bootbox.min.js" type="text/javascript"></script>
    <script src="~/Content/js/scripts.js" type="text/javascript"></script>
    <script src="~/Content/js/fieldModifier.min.js" type="text/javascript"></script>
    <script>
   $(function(){
        $('#btn-invoice').click(function(e){
     e.preventDefault();
  var prtContent = document.getElementById("invoice-table");
  window.console.log(prtContent.outerHTML);
var WinPrint = window.open('', 'RECEIPT', 'left=0,top=0,width=800,height=600,toolbar=0,scrollbars=0,status=0');
WinPrint.document.write(prtContent.outerHTML);
WinPrint.document.close();
WinPrint.focus();
WinPrint.print();
WinPrint.close();
 });
   });
    </script>
</body>
</html>

